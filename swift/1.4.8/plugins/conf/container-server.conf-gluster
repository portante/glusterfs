[DEFAULT]
devices = /srv/1/node
mount_check = false
bind_port = 6011
workers = 1

[pipeline:main]
pipeline = gluster container-server

[app:container-server]
use = egg:swift#container
user = root
log_facility = LOG_LOCAL2
node_timeout = 60
conn_timeout = 5

[filter:gluster]
use = egg:swift#gluster

[container-replicator]
vm_test_mode = yes

[container-updater]

[container-auditor]

[container-sync]
